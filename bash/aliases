alias docker='docker --tls'

# yolo = sudo
alias yolo='sudo'

# docker
alias docker-rmi-dangling='docker rmi $(docker images -f "dangling=true" -q)'
alias docker-rm-exited='test ! $(docker ps -a -f status=exited -q) || docker rm -v $(docker ps -a -f status=exited -q)'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lt='ls -lt'
alias ltr='ls -ltr'

# git typos
alias gti='git'
alias got='git'
alias g='git'
alias very='git'
alias much='git'
alias such='git'
alias wow='git status'

# navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"
alias c='cd /box/www/current_local'

# Unicode gpg
alias gpg='gpg2 --display-charset utf-8'

alias grep='grep --exclude-dir=.svn --exclude-dir=.git'

