-- from https://github.com/aanari/dotfiles/blob/master/config/psqlrc

\set QUIET ON

\set HISTFILE ~/.psql_history- :HOST - :DBNAME
\set HISTSIZE 2000
\set COMP_KEYWORD_CASE upper

-- \x
\pset linestyle unicode
\pset border 2
\pset null '[NULL]'
\set PROMPT1 '%n@%M:%> %/%R%#%x '
\set PROMPT2 '%n@%M:%> %/%R%# '
\pset pager off
\pset format wrapped
\timing
\encoding unicode

\unset quiet
